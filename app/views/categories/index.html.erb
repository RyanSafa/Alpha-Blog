<h1 class = "text-center mt-4">Categories</h1>

<div class="apple_pagination justify-content-center ">
    <%= will_paginate @categories, :container => false %>
</div>

<div class="container">
    <% @categories.each do |category| %>
        <div class = "d-flex justify-content-center"> 
        <div class="col-4 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="card-body py-0 px-0">
                        <h5 class="card-title mt-2"><%= link_to category.name, category_path(category), class: 'text-success'%> </h5>
                        <p class="card-text"><%= pluralize(category.articles.count, "article")%></p>
                        <div class="card-footer text-muted mt-2"> 
                            <small> Created <%= time_ago_in_words(category.created_at)  %> ago, edited <%= time_ago_in_words(category.updated_at) %> ago</small>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    <%end %>
</div>

