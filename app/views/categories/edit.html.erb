<h1 class = "text-center mt-4">Edit category name</h1>

<div class="container"> 

<div class="row justify-content-center">
  <div class = "col-10"> 
      <%= render 'shared/errors', obj: @category%>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true)  do |f| %>
        <div class = "form-group row">
            <%= f.label :name, "Category name", class: " col-2 col-form-label text-light" %> <br/>
            <div class="col-10">
              <%= f.text_field :name, class: "form-control shadow rounded ", placeholder: "Enter a category"  %>
            </div>
        </div>
          <div class = "form-group row pt-3 justify-content-center"">
            <div class="col-2">
              <%= f.submit class: "btn btn-outline-light btn-lg" %>
              </div>
        <% end %> 
    </div>
  </div>

  <div id = "link"> 
    <%=link_to '[Cancle and return to category ]', category_path(@category), class: "text-info"%> 
  </div>
</div>



    
