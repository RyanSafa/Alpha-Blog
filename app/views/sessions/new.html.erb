<h1 class = "text-center mt-4">Login</h1>

<div class="container">
    <div class = "row justify-content-center">
        <div class = "col-10"> 
            <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true)  do |f| %>
                <div class = "form-group ">
                    <div class = "row">
                        <br> <%= f.label :email, class: "text-white col-2"%> </br>
                        <div class = "col-10">
                            <%= f.email_field :email, class: " form-control shadow-rounded", placeholder: "Enter your email here" %>
                        </div>
                    </div>
                </div>
                <div class = "form-group pt-3 ">
                    <div class = "row">
                        <br> <%= f.label :password, class: "text-white col-2"%> </br>
                        <div class = "col-10">
                            <%= f.password_field :password, class: " form-control shadow-rounded", placeholder: "Enter your password" %>
                        </div>
                    </div>
                </div>

                <div class = "form-group row justify-content-center pt-2">
                    <%= f.submit "Log in", class: "btn btn-outline-light btn-lg col-2" %> 
                </div>
            <%end%>
        </div>
    </div>
</div>

<div id = "link"> 
    <%=link_to '[Cancle and return to article listing]', articles_path, class: "text-info"%> 
</div>
