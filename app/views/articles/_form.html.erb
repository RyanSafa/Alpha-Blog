<div class="container"> 

<div class="row justify-content-center">
  <div class = "col-10"> 
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true)  do |f| %>
        <div class = "form-group row">
            <%= f.label :tittle, class: "col-2 col-form-label text-light" %> <br/>
            <div class="col-10">
              <%= f.text_field :tittle, class: "form-control shadow rounded ", placeholder: "Tittle of article"  %>
            </div>
          </div>
          <div class="row jusitfy "></div>
          <div class = "form-group row pt-3">
            <%= f.label :description, class: "col-2 col-form-label text-light" %> <br/>
            <div class="col-10">
              <%= f.text_area :description, rows: 10,  class: "form-control shadow rounded ", placeholder: "Description of Article" %>
            </div>
          </div>
          <div class = "form-group row pt-3 justify-content-center"">
            <div class="col-2">
              <%= f.submit class: "btn btn-outline-light btn-lg" %>
              </div>
        <% end %> 
    </div>
  </div>

  <div id = "link"> 
    <%=link_to '[Cancle and return to article listing]', articles_path, class: "text-info"%> 
  </div>
</div>



    
